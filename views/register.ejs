<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="row">
        <div class="col-4 offset-3">
            <form action="/register" method="post">
                <p class="h1 text-center">REGISTER</p>
                <p><span class="h3">NAME :</span><input type="text" name="username"></p>
                <p><span class="h3">PASSWORD :</span><input type="text" id="pass" name="password"></p>
                <p><span class="h3">RE ENTER PASSWORD :</span><input  id="rpass" type="text" onkeyup="checkpass()"></p>
                <p><button  type="submit" >REGISTER</button></p>
            </form>
            

        </div>
    </div>
    
</body>
<script>
    function checkpass() {
        let pass=document.getElementById('pass').value
        let rpass=document.getElementById('rpass').value

        if (pass!=rpass) {
            document.getElementById('rpass').style.borderColor='red'
            
        }
        else{
            document.getElementById('rpass').style.borderColor=''

        }

        
    }
</script>
</html>